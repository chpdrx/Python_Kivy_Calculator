<randomkivy>:
    text_input: text_input
    button_random: button_random
    TextInput:
        id: text_input
        text: ''
        font_size: 30
        size_hint: 1, .2
    GridLayout:
        cols: 2
        rows: 1
        spacing: 1
        Button:
            id: button_random
            on_press: root.press_button_random()
            text: 'Мне повезёт'
            width: 100
            height: 50
        Button:
            id: button_clear
            on_press: root.press_button_clear()
            text: 'Очистить'
            width: 100
            height: 50